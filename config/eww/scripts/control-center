#!/bin/bash

ccstate=`eww -c ~/.config/eww/bar get control-rev`

if [[ $ccstate == true ]]; then
  eww -c ~/.config/eww/control-center close control-center && eww -c ~/.config/eww/bar update control-rev=false
else
  eww -c ~/.config/eww/control-center open control-center && eww -c ~/.config/eww/bar update control-rev=true
fi
