(defwidget desktop []
  (box
    :class "desktop desktop-hours"
    (label :text hours)
    (label :text mins)))

(defwindow desktop
  :stacking "bg"
  :monitor "0"
  :namespace "desktop"
  :geometry (geometry
              :x "0px"
              :y "0px"
              :width "100%"
              :height "100%"
              :anchor "center")
  (desktop))
