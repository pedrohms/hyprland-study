(defpoll vol :interval "0.1s" "pamixer --get-volume-human")
(defvar eww "eww -c ~/.config/eww/notification/volume")

(defwidget volume []
  (box
    :class "volume"
    (button :onclick "${eww} close-all" "Volume set to ${vol}")))

(defwindow volume
  :windowtype "dialog"
  :stacking "fg"
  :wm-ignore true
  :geometry (geometry
    :x "0px"
    :y "45px"
    :width "200px"
    :height "50px"
    :anchor "top center")
  (volume))

