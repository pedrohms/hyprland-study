# make sxhkd reload its configuration files
mod4 + Escape
	pkill -USR1 -x sxhkd
 
# quit or restart bspwm
alt + shift + {q,r}
	bspc {quit,wm -r}
 
# Spawn kittyterminal
mod4 + Return
  kitty

# close or kill a window
mod4 + q
	bspc node -c
 
# focus or send a window to the given desktop
alt + {1-5}
	bspc node -d '{1-5}'

# Binding special keys
XF86PowerOff
  ~/.config/rofi/powermenu/type-2/powermenu.sh

XF86AudioRaiseVolume
  pamixer -i 5

XF86AudioLowerVolume
  pamixer -d 5

XF86AudioMute
  pamixer -t

XF86AudioMicMute
  pamixer --default-source -t

XF86MonBrightnessUp
  brillo -A 10

XF86MonBrightnessDown
  brillo -U 10

Print
  ~/.config/bspwm/scrot.sh

# Spawn Firefox Developer Edition
mod4 + f
  firefox-developer-edition

# Spawn Rofi
mod4 + r
  ~/.config/rofi/launchers/type-2/launcher.sh

# Desktops
mod4 + {1,2,3,4,5}
  bspc desktop -f {1,2,3,4,5}

# Minimizing/Restoring windows
mod4 + {a,s}
  ~/.config/wmstuff/minimizer.sh {minimize,unminimize}

# Focusing next/previous window
alt + {q,w}
  bspc node -f {prev,next}.local.window

# Toggle fullscreen
alt + Escape
  bspc node -t {tiled, fullscreen}

alt + f
  bspc node -t {tiled, floating}

alt + {a,s}
  bspc node -s {prev,next}.local

# playerctl
XF86AudioPlay
  playerctl play

XF86AudioPause
  playerctl pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous
